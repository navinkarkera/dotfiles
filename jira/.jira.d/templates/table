{{/* table template */ -}}
{{- headers "Issue" "Summary" "Type" "Priority" "Status" "Age" "Assignee" -}}
{{- range .issues -}}
  {{- row -}}
  {{- cell .key -}}
  {{- cell .fields.summary -}}
  {{- cell .fields.issuetype.name -}}
  {{- if .fields.priority -}}
    {{- cell .fields.priority.name -}}
  {{- else -}}
    {{- cell "<none>" -}}
  {{- end -}}
  {{- cell .fields.status.name -}}
  {{- cell (.fields.created | age) -}}
  {{- if .fields.assignee -}}
    {{- cell .fields.assignee.displayName -}}
  {{- else -}}
    {{- cell "<none>" -}}
  {{- end -}}
{{- end -}}
