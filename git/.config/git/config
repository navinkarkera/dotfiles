[user]
	email = navin@opencraft.com
	name = Navin Karkera
	signingkey = /home/navin/.ssh/id_ed25519.pub
[alias]
	last = !git --no-pager log -1 HEAD --stat
	cm = commit -m
	d = diff
	dft = difftool
	parent = rev-parse --abbrev-ref origin/HEAD
	dm = "!f() { [[ `git rev-parse --abbrev-ref HEAD` != \"master\" ]] && [[ `git rev-parse --abbrev-ref HEAD` != \"main\" ]] && git diff $(git parent)...HEAD; }; f"
	dv = difftool --no-symlinks --dir-diff
	dvm = "!f() { [[ `git rev-parse --abbrev-ref HEAD` != \"master\" ]] && [[ `git rev-parse --abbrev-ref HEAD` != \"main\" ]] && git dv $(git parent)...HEAD; }; f"
	gl = !git --no-pager config --global -l
	se = !git rev-list --all | xargs git grep -F
	s = status
	co = checkout
	cob = checkout -b
	br = !git --no-pager branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
	pl = pull --rebase upstream HEAD
	ps = push -f origin HEAD
	lg = !git --no-pager log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) [%an]\" --abbrev-commit -30
	cc = commit
	save-update = "!f() { git stash && git fetch $1 && git reset --hard $1/master && git stash pop; }; f"
	fu = fetch upstream
	rum = reset --hard upstream/master
	save = "!f() { git add . && git commit -m \"chore: update\"; git push; }; f"
	jump = "!f() { /usr/share/git/git-jump/git-jump $@; }; f"
	; list-untracked = "!f() { git fetch --prune && git branch -r | awk \"{print \$1}\" | grep -E -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk \"{print \$1}\" }; f"
	; remove-untracked = "!f() { git fetch --prune && git branch -r | awk \"{print \$1}\" | grep -E -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk \"{print \$1}\" | xargs git branch -d }; f"


[core]
	pager = delta --paging=always
	excludesfile = /home/navin/dotfiles/git/.config/git/.gitignore_global
	compression = 0

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
	tool = difftastic
	tool = kitty
	guitool = kitty.gui

[difftool]
	prompt = false
	trustExitCode = true

[difftool "kitty"]
	cmd = kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
	cmd = kitten diff $LOCAL $REMOTE

[pager]
	difftool = true
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[credential]
	helper = store
[http]
	postBuffer = 500M
	maxRequestBuffer = 100M
[rerere]
	enabled = true
[gpg]
	format = ssh
