#!/usr/bin/env bash

case "$(printf "kill\nlogout\nreboot\nshutdown" | dmenu -i -b -l 4)" in
	kill) ps -u $USER -o pid,comm,%cpu,%mem | dmenu -i -b -l 10 -p Kill: | awk '{print $1}' | xargs -r kill ;;
	logout) loginctl kill-session $XDG_SESSION_ID ;;
	reboot) systemctl reboot -i ;;
	shutdown) shutdown now ;;
	*) exit 1 ;;
esac
