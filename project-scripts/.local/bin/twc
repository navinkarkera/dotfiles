#!/bin/bash

if [[ -z "$1" ]]; then
	if [[ $(timew get dom.active) = "1" ]]; then
		# cat ~/.timewarrior/data/tags.data | jq 'keys | sort[]' -r | fzf --print-query --bind 'enter:become(timew tag {} && timew stop),ctrl-e:become(timew tag {} && timew stop && timew start),ctrl-n:become(timew tag {q} && timew stop)' --query "BB-"
		timew twfzf 6m
	else
		timew start
	fi
else
	timew tag "${1}" && timew stop
fi
