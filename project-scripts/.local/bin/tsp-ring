#!/usr/bin/env bash

command=$1
path=$2
result=$3
start=$4
end=$5
output=$6
job_id=$7
group=$8

msg="[$group]|[$result]: '$command'; Took: $(bc <<< "$end - $start") seconds"
notify-send -a "Task queue: $path" "$msg" "$(echo -e "$output")"
