news.version=2.6.0
# Reports
report.next.filter=status:pending -WAITING

# Tasks to work on today
report.today.description=Tasks for today
report.today.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.today.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg
report.today.sort=due,urgency-
report.today.filter=status:pending -WAITING (due.before:eow or +ACTIVE or sch:today or due.before:2w)

# Tasks from jira
report.jira.description=Tasks from jira
report.jira.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.jira.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg
report.jira.sort=urgency-
report.jira.filter=status:pending -WAITING +jira_task or +jira_review

# Tasks from github
report.github.description=Tasks from github
report.github.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description,urgency,modified.age
report.github.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg,Modified
report.github.sort=entry-,modified-
report.github.filter=status:pending -WAITING +github +new -maintainer

# Maintainer tasks
report.maintainer.description=Maintainer tasks
report.maintainer.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description,urgency,modified.age
report.maintainer.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg,Modified
report.maintainer.sort=entry-,modified-
report.maintainer.filter=status:pending -WAITING +maintainer +new

# Ideas
report.ideas.description=Ideas
report.ideas.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description,urgency,modified.age
report.ideas.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg,Modified
report.ideas.sort=entry-,modified-
report.ideas.filter=status:pending -WAITING +ideas

# Taskwarrior tui
uda.taskwarrior-tui.selection.reverse=yes

# Alias
alias.attach=execute /home/navin/.config/taskopen/attach
alias.addnote=execute /home/navin/.config/taskopen/addnote

# Shortcut
# uda.taskwarrior-tui.keyconfig.shortcut1=o
uda.taskwarrior-tui.shortcuts.1=wezterm cli spawn -- taskopen
uda.taskwarrior-tui.shortcuts.2=task addnote
uda.taskwarrior-tui.shortcuts.3=task attach
uda.taskwarrior-tui.shortcuts.4=task rc.confirmation=off modify -new
uda.taskwarrior-tui.shortcuts.9=wezterm cli spawn -- view_task_info
